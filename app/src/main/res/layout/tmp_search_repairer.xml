<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_icon_in_app_menu"
    android:background="@android:drawable/editbox_background_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_home"
        style="@style/CusImageIconAppTheme"
        android:background="@drawable/icon_nguoi" />


    <TextView
        android:id="@+id/tv_description_app"
        style="@style/CusTextViewTitleTheme"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="Pham Luan" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/size_icon_in_app"
        android:layout_height="@dimen/size_icon_in_app"
        android:indeterminateDrawable="@drawable/progress_bar_animation" />


</LinearLayout>