            <!--android:id="@+id/numPicker_Hours"-->
            <!--android:layout_width="@dimen/control_input_text_h"-->
            <!--android:layout_height="wrap_content" />-->

        <!--<TextView-->
            <!--android:id="@+id/textView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:text=":"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge" />-->

        <!--<NumberPicker-->
            <!--android:id="@+id/numPicker_Seconds"-->
            <!--android:layout_width="@dimen/control_input_text_h"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="@dimen/dialog_padding"-->
            <!--android:layout_toRightOf="@+id/numPicker_Hours" />-->

        <!--<NumberPicker-->
            <!--android:id="@+id/numPicker_Sessions"-->
            <!--android:layout_width="@dimen/control_input_text_h"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toRightOf="@+id/numPicker_Hours" />-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/confirm_ui_padding_w"
        android:paddingTop="@dimen/confirm_ui_padding_w">

        <Button
            android:id="@+id/btn_Now"
            style="@style/CusButtonTheme"
            android:layout_marginRight="@dimen/padding"
            android:background="@drawable/btn_ripple_grey_yellow"
            android:paddingLeft="@dimen/confirm_ui_padding_w"
            android:paddingRight="@dimen/confirm_ui_padding_w"
            android:text="@string/btn_TranInfo_Now" />

        <Button
            android:id="@+id/btn_Accept"
            style="@style/CusButtonTheme"
            android:layout_marginLeft="@dimen/padding"
            android:background="@drawable/btn_ripple_grey_yellow"
            android:paddingLeft="@dimen/confirm_ui_padding_w"
            android:paddingRight="@dimen/confirm_ui_padding_w"
            android:text="@string/btn_Accept" />
    </LinearLayout>

</LinearLayout>
