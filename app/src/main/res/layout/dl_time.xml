<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/confirm_ui_padding_w">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding">

        <TextView
            android:id="@+id/txt_Titile_Time"
            style="@style/CusTextViewTitleTheme"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/padding"
            android:text="@string/title_Time" />

        <Button
            android:id="@+id/btn_Exit"
            android:layout_width="@dimen/size_icon_in_rating"
            android:layout_height="@dimen/size_icon_in_rating"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/padding"
            android:background="@drawable/icon_huy" />
    </RelativeLayout>


    <TextView
        android:id="@+id/txt_Titile"
        style="@style/CusTextViewTitleTheme"
        android:gravity="center"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/confirm_ui_padding_w"
        android:text="@string/title_Paytype_time"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/lout_Container_View_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description"
        android:layout_marginTop="@dimen/confirm_ui_padding_w"
        android:orientation="vertical">


        <android.support.v4.view.ViewPager
            android:id="@+id/pagerDate"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_text_app_logo"
            android:layout_weight="1" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_line1"
        android:layout_width="fill_parent"
        android:layout_height="0.5sp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/lout_container"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <com.strategy.intecom.vtc.fixuser.view.custom.calendarview.CustomTimePicker
            android:id="@+id/custom_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:timePickerMode="spinner"
            />

