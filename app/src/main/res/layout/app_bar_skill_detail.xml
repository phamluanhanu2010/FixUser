<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange"
    android:theme="@style/AppTheme.AppBarOverlay">

    <LinearLayout
        android:id="@+id/lout_container_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/orange"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/confirm_ui_padding_w"
            android:src="@drawable/icon_back"
            android:visibility="visible" />


        <RelativeLayout
            android:id="@+id/lout_BarContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_icon_in_app"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/img_bar_fields_icon"
                    android:layout_width="@dimen/size_icon_in_app"
                    android:layout_height="@dimen/size_icon_in_app"
                    android:src="@drawable/icon_suanha" />

                <TextView
                    android:id="@+id/tv_bar_fields_titile"
                    style="@style/CusTextViewTitleTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_icon_in_app"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Cứu hộ " />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_bar_fields_content"
                style="@style/CusTextViewContentTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/title"
                android:gravity="center"
                android:text="Vui lòng chọn chi tiết muốn sửa" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/confirm_ui_padding_w"
            android:paddingTop="@dimen/confirm_ui_padding_w"
            android:visibility="invisible"
            android:src="@drawable/ic_next_black" />

    </LinearLayout>

</android.support.design.widget.AppBarLayout>

