<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lout_container_title"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <!--<ImageView-->
        <!--android:id="@+id/img_scrolling"-->
        <!--android:layout_width="@dimen/size_icon_in_app_menu"-->
        <!--android:layout_height="10dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:src="@android:drawable/arrow_up_float" />-->

    <!--android:layout_below="@+id/img_scrolling"-->
    <LinearLayout
        android:id="@+id/lout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="@dimen/control_input_text_h"
            android:layout_height="@dimen/control_input_text_h"
            android:padding="@dimen/drawable_padding"
            android:scaleType="fitXY"
            android:src="@drawable/icon_avatar"
             />


        <TextView
            android:id="@+id/tv_description_app"
            style="@style/CusTextViewTitleTheme"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Hoàng Hà" />

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="@dimen/size_icon_in_app"
            android:layout_height="@dimen/size_icon_in_app"
            android:src="@drawable/icon_goi_active" />


        <ImageView
            android:id="@+id/img_message"
            android:layout_width="@dimen/size_icon_in_app"
            android:layout_height="@dimen/size_icon_in_app"
            android:layout_marginLeft="@dimen/confirm_ui_padding_h"
            android:layout_marginRight="@dimen/confirm_ui_padding_w"
            android:src="@drawable/icon_message" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@+id/lout_container"
        android:background="@android:color/darker_gray" />

</RelativeLayout>