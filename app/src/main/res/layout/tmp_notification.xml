<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_normal"
    android:padding="@dimen/confirm_ui_padding_h">

    <ImageView
        android:id="@+id/img_Icon"
        android:layout_width="@dimen/size_icon_in_app"
        android:layout_height="@dimen/size_icon_in_app_bar"
        android:background="@drawable/icon_thu_normal"
        />

    <ImageView
        android:id="@+id/img_readed"
        android:layout_height="@dimen/size_icon_in_app"
        android:layout_width="@dimen/size_icon_in_app"
        android:background="@drawable/icon_tron"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/txt_Title"
        style="@style/CusTextViewTitleTheme"
        android:layout_toRightOf="@+id/img_Icon"
        android:layout_toLeftOf="@id/img_readed"
        android:text="Tiêu đề in đậm ssssssssssssssssssssssssssssss sadsadasdas"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_Message"
        style="@style/CusTextViewContentTheme"
        android:layout_below="@+id/txt_Title"
        android:layout_toRightOf="@+id/img_Icon"
        android:layout_toLeftOf="@id/img_readed"
        android:layout_marginTop="@dimen/padding"
        android:text="17 tháng 6, 2016 10:30 AM" />

</RelativeLayout>