<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/color_transparent_back_22">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/orange" />
            <stroke android:width="0.1sp"
                android:color="@color/color_transparent_back_22"></stroke>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/orange" />
            <stroke android:width="0.1sp"
                     android:color="@color/orange"></stroke>
        </shape>
    </item>

</ripple>